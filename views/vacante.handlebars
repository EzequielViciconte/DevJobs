<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre">{{vacante.Empresa}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Ubicacion</p>
        <p class="nombre">{{vacante.Ubicacion}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre">{{vacante.Contrato}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salario</p>
        <p class="nombre"><span>$ </span>{{vacante.Salario}}</p>
    </div>
</div>


<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripcion del Puesto</h2>
        <div class="vacante-descripcion">
            {{{vacante.Descripcion}}}
        </div>

        {{#if Admin}}
            <a href="/vacantes/editar/{{vacante.Url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
        {{/if}}
    </main>
    <aside class="sidebar">
        <h2>Conociminetos Deseados</h2>
        <ul class="skills">
            {{#each vacante.Skills}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contacta al Reclutador</h2>
        <p>Llena el siguiente formulario,sube tu curriculum y pronto te contactaremos</p>

        <form action="/vacantes/{{vacante.Url}}" method="POST" class="default-form" enctype="multipart/form-data">
            <div class="campo">
                <label>Nombre</label>
                <input type="text" name="Nombre" placeholder="Tu Nombre">
            </div>
            <div class="campo">
                <label>Email</label>
                <input type="email" name="Email" placeholder="Tu Email">
            </div>
            <div class="campo">
                <label>CV (PDF)</label>
                <input type="file" name="cv">
            </div>
            <div class="campo">
                <input type="submit" class="btn btn-verde" value="Enviar">
            </div>
        
        </form>

    </div>
    <div class="info-reclutador">
        <h2>Informacion Reclutador</h2>
        {{#if vacante.Autor.Nombre}}
            <p>{{vacante.Autor.Nombre}}</p>
        {{/if}}
        {{#if vacante.Autor.Imagen}}
             <img src="/uploads/perfiles/{{vacante.Autor.Imagen}}" class="admin-perfil" alt="Imagen Usuario">
        {{/if}}
       
    </div>
</div>